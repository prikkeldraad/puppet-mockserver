[Unit]
    Description=Mockserver <%= @version %>
    Requires=mockserver.service
    Before=mockserver.service
    BindsTo=mockserver.service

[Service]
    Type=simple
    User=<%= @user %>
    SysylogIdentifier=mockserver-%i
    ExecStart=<%= @install_dir %>/<%= @version %>/bin/mockserver.sh start
    ExecStop=<%= @install_dir %>/<%= @version %>/bin/mockserver.sh stop

[Install]
    WantedBy=mockserver.service
